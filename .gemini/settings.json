{
  "general": {
    "checkpointing": {
      "enabled": true
    }
  },
  "context": {
    "fileName": "AGENTS.md"
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "ui": {
    "theme": "Default"
  },
  "ignore": [
    ".git/**",
    ".github/**",
    ".idea/**",
    ".mypycache__/**",
    ".venv/**"
  ],
  "mcpServers": {
    "github": {
      "httpUrl": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${GITHUB_TOKEN}"
      },
      "timeout": 5000
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp", "--api-key", "${CONTEXT7_API_KEY}"]
    }
  }
}